@import 'nib'

#content
  display box
  display -webkit-box

#hubo_container
  position relative


#hubo_meta_container{
  position: relative;
  width: 25%;   /* desired width */
}
#hubo_meta_container:before{
  content: "";
  display: block;
  padding-top: 100%;  /* initial ratio of 1:1*/
}

#hubo_container{
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}

