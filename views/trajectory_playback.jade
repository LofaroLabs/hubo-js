extends templates/regular-layout

block prepend head
  title Trajectory Playback

block body
  p This page, "trajectory_playback.html", aims to demonstrate how to load and play back recorded angles over time. E.g. mocap data.
  table(border='1')
    tr
      td
        #hubo_container  
        div(style='text-align: center;') LEFT button ROTATES. RIGHT button PANS. MIDDLE wheel ZOOMS.
      td
        table
          tr
            td
              select(id="traj_selection")
                option(value="") -- Select --
                option(value="home2walkready.traj") Home 2 Walk Ready
                option(value="walkready2home.traj") Walk Ready 2 Home
                option(value="Taichi.traj") Taichi
                option(value="Bow.traj") Bow
                option(value="welcome.traj") Welcome
                option(value="goodbye.traj") Goodbye
                option(value="Hand_wave.traj") Hand wave
                option(value="Left_hand_head.traj") Left hand head
                option(value="Right_hand_head.traj") Right hand head
                option(value="safeDance1.traj") Dance 1
                option(value="safeDance2.traj") Dance 2
                option(value="safeDance3.traj") Dance 3
                option(value="safeDance4.traj") Dance 4                
                option(value="sign_language.traj") Sign language
                option(value="speech1.traj") Speech 1
                option(value="speech2.traj") Speech 2
          tr
            td
              button(id="toggle_play",disabled="disabled") Play

block append scripts
  include includes/hubo
  script(src='js/lib/watch.min.js')
  script(src='js/trajectory_playback.js')
  script(src='js/trajectory_playback_gui.js')